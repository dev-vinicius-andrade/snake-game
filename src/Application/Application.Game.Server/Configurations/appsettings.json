{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "DockerDeamonConfiguration": {
      //"endpoint": "npipe://./pipe/docker_engine", //docker desktop for windows outside docker
      //"endpoint": "unix:///var/run/docker.sock" // docker for linux outside docker
      "endpoint": "tcp://host.docker.internal:2375" // or join via url
    },
    "SwaggerConfiguration": {
      "Title": "Snake Manager Api",
      "Name": "Application.Manager.Api V1",
      "Description": "The Snake Game Manager Api for handling available rooms, configurations"
    },
    "CorsConfiguration": {
      "AllowAll": true
    },
    "EventbusConfiguration": {
      "ConnectionString": "amqp://rabbitmq:5672"
    },
    "ManagementApiConfiguration": {
      "BaseUrl": "https://Application.Manager.Api",
      "ApiKey": "E1F7F301-B9DD-4CE0-A4FF-85DC46B3624D"

    }
  },
  "ServerConfiguration": {
    "Domain": "localhost",
    "Scheme": "https",

    "RoomsConfiguration": {
      "MaxRooms": 2,
      "MaxPlayersPerRoom": 5,
      "MaxFoods": 50 
    },
    "FoodConfiguration": {
      "FoodGenerationInterval": 50,
      "FoodSize": 15
    },
    "SnakeConfiguration": {
      "RotationSpeed": 5,
      "Speed": 15,
      "HeadSize": 15,
      "InitialSnakeSize": 5
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
