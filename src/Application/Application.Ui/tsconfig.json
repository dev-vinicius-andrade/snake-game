{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "isolatedModules": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
    "@/*":            ["src/*"],
    "@components/*":  ["src/components/*"],
    "@assets":        ["src/assets"],
    "@assets/*":      ["src/assets*"],
    "@axios":         ["src/plugins/axios"],
    "@enums":         ["src/enums"],
    "@enums/*":       ["src/enums/*" ],
    "@router":        ["src/router"],
    "@router/*":      ["src/router/*"],
    "@locales/*":     ["src/locales/*"],
    "@mixins/*":      ["src/mixins/*"],
    "@styles/*":      ["src/styles/*"],
    "@types":         ["src/types" ],
    "@types/*":       ["src/types/*"],
    "@views/*":       ["src/views/*"],
    "@plugins/*":     ["src/plugins/*"],
    "@store":         ["src/store"],
    "@store/*":       ["src/store/*"],
    "@models":        ["src/models"],
    "@models/*":      ["src/models/*"],
    "@interfaces":    ["src/interfaces"],
    "@interfaces/*":  ["src/interfaces/*"],
    "@composables":   ["src/composables"],
    "@composables/*": ["src/composables/*"],
    "@layouts":       ["src/layouts"],
    "@layouts/*":     ["src/layouts/*"],
    "@helpers":       ["src/helpers"],
    "@helpers/*":     ["src/helpers/*"],
    },
    "types": [
      "vuetify",
      "vite/client",
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "vite.config.*",
    "*.d.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "themeConfig.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["node_modules"]
}
